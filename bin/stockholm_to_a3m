#!/bin/env python

import sys

if __name__ == '__main__':
    if len(sys.argv) != 3:
        sys.stderr.write('    Stockholm to A3M fast file converter.\n'
                         '        Usage:\n'
                         '        $ stockholm_to_a3m inputfile.sto outputfile.a3m\n')
        exit(1)

    try:
        from stockholm_reformat import cparse as parse
    except ImportError:
        from stockholm_reformat import parse

    parse(sys.argv[1], sys.argv[2])
